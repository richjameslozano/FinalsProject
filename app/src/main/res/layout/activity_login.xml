<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/darkgreen"
    tools:context=".login">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="108dp"
        android:layout_height="86dp"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_delete" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="137dp"
        android:layout_height="45dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="@color/sdarkgreen"
        android:fontFamily="@font/baloo"
        android:text="SIGN IN"
        android:textColor="@color/pastelgreen"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.791"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.432"
        app:rippleColor="@color/green3" />

    <TextView
        android:id="@+id/no_acc_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/baloo"
        android:text="Don't have an account yet?"
        android:textColor="@color/pastelgreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_btn"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo"
        android:text="SIGN UP"
        android:textAlignment="center"
        android:textColor="@color/green3"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/no_acc_txt"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo"
        android:text="Forgot Password?"
        android:textAlignment="center"
        android:textColor="@color/green4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/remember_btn"
        android:layout_width="156dp"
        android:layout_height="47dp"
        android:buttonTint="@color/pastelgreen"
        android:fontFamily="@font/baloo"
        android:outlineAmbientShadowColor="@color/sage"
        android:outlineSpotShadowColor="@color/sage"
        android:shadowColor="@color/sage"
        android:text="Remember Me?"
        android:textColor="@color/pastelgreen"
        android:textColorHint="@color/sage"
        android:textColorLink="@color/sage"
        android:textSize="16sp"
        app:buttonIconTint="@color/sage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.464" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="376dp"
        android:layout_height="67dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="32dp"
        android:hint="Email"
        android:textColorHint="@color/pastelgreen"
        app:boxStrokeColor="@color/green4"
        app:endIconMode="clear_text"
        app:endIconTint="@color/pastelgreen"
        app:hintTextColor="@color/pastelgreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.206"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:placeholderText="ex: abcde@gmail.com"
        app:placeholderTextColor="@color/pastelgreen"
        app:startIconDrawable="@drawable/baseline_email_24"
        app:startIconTint="@color/pastelgreen">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email_login"
            android:layout_width="351dp"
            android:layout_height="50dp"
            android:textAlignment="textStart"
            android:textColor="@color/pastelgreen"
            android:textColorHint="@color/pastelgreen" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="369dp"
        android:layout_height="69dp"
        android:layout_marginTop="4dp"
        android:hint="Password"
        android:textColorHint="@color/pastelgreen"
        app:boxStrokeColor="@color/green4"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/pastelgreen"
        app:hintTextColor="@color/pastelgreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.619"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
        app:prefixTextColor="@color/pastelgreen"
        app:startIconDrawable="@drawable/pass_logo"
        app:startIconTint="@color/pastelgreen">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/pass_login"
            android:layout_width="352dp"
            android:layout_height="51dp"
            android:textColor="@color/pastelgreen"
            android:textColorHint="@color/pastelgreen" />
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>