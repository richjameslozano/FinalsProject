<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="@color/maincolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        tools:layout_editor_absoluteY="228dp">

        <Button
            android:id="@+id/next_btn1"
            android:layout_width="114dp"
            android:layout_height="63dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="@color/neutralgreen"
            android:text="Next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.944" />

        <Button
            android:id="@+id/back_btn1"
            android:layout_width="114dp"
            android:layout_height="63dp"
            android:backgroundTint="@color/neutralgreen"
            android:text="Back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.132"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.944" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout3"
            android:layout_width="369dp"
            android:layout_height="63dp"
            android:layout_marginTop="12dp"
            android:hint="Last Name"
            android:textColorHint="@color/textcolor"
            app:boxStrokeColor="@color/textcolor"
            app:endIconMode="clear_text"
            app:endIconTint="@color/textcolor"
            app:hintTextColor="@color/textcolor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout6"
            app:placeholderTextColor="@color/textcolor"
            app:startIconTint="@color/textcolor"
            app:suffixTextColor="@color/textcolor">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/last_name"
                android:layout_width="359dp"
                android:layout_height="54dp"
                android:textColorHint="@color/textcolor" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="371dp"
            android:layout_height="64dp"
            android:layout_marginTop="16dp"
            android:hint="Contact Number"
            android:textColorHint="@color/textcolor"
            app:boxStrokeColor="@color/textcolor"
            app:endIconTint="@color/textcolor"
            app:hintTextColor="@color/textcolor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout3"
            app:placeholderTextColor="@color/textcolor"
            app:prefixTextColor="@color/textcolor"
            app:startIconDrawable="@drawable/contact_logo"
            app:startIconTint="@color/textcolor">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/contact_num"
                android:layout_width="358dp"
                android:layout_height="58dp"
                android:inputType="text"
                android:maxLength="11"
                android:textColor="@color/textcolor" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout6"
            android:layout_width="366dp"
            android:layout_height="60dp"
            android:layout_marginTop="64dp"
            android:hint="First Name"
            android:textColorHint="@color/textcolor"
            app:boxStrokeColor="@color/textcolor"
            app:hintTextColor="@color/textcolor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/first_name"
                android:layout_width="356dp"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolor"
                android:textColorHint="@color/textcolor"
                android:textColorLink="@color/textcolor" />
        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>