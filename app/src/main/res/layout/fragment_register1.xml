<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="@color/sdarkgreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        tools:layout_editor_absoluteY="228dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            android:layout_width="370dp"
            android:layout_height="63dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="364dp"
            android:hint="First Name"
            android:textColorHint="@color/pastelgreen"
            app:boxStrokeColor="@color/green4"
            app:endIconMode="clear_text"
            app:endIconTint="@color/pastelgreen"
            app:hintTextColor="@color/pastelgreen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.551"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView3"
            app:placeholderText="ex: abcde@gmail.com"
            app:placeholderTextColor="@color/pastelgreen"
            app:prefixTextColor="@color/pastelgreen"
            app:startIconTint="@color/pastelgreen">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/first_name"
                android:layout_width="357dp"
                android:layout_height="51dp"
                android:textAlignment="textStart"
                android:textColor="@color/pastelgreen"
                android:textColorHint="@color/pastelgreen"
                android:textColorLink="@color/pastelgreen" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/next_btn1"
            android:layout_width="114dp"
            android:layout_height="63dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="@color/neutralgreen"
            android:text="Next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.944" />

        <Button
            android:id="@+id/back_btn1"
            android:layout_width="114dp"
            android:layout_height="63dp"
            android:backgroundTint="@color/neutralgreen"
            android:text="Back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.132"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.944" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="369dp"
            android:layout_height="63dp"
            android:hint="Last Name"
            android:textColorHint="@color/pastelgreen"
            app:boxStrokeColor="@color/green4"
            app:hintTextColor="@color/pastelgreen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:placeholderTextColor="@color/pastelgreen"
            app:suffixTextColor="@color/pastelgreen"
            tools:layout_editor_absoluteY="116dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/last_name"
                android:layout_width="359dp"
                android:layout_height="54dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="371dp"
            android:layout_height="64dp"
            android:layout_marginEnd="16dp"
            android:hint="Contact Number"
            android:textColorHint="@color/pastelgreen"
            app:boxStrokeColor="@color/green4"
            app:hintTextColor="@color/pastelgreen"
            app:layout_constraintEnd_toEndOf="parent"
            app:placeholderTextColor="@color/pastelgreen"
            app:prefixTextColor="@color/pastelgreen"
            tools:layout_editor_absoluteY="214dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/contact_num"
                android:layout_width="358dp"
                android:layout_height="58dp" />
        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>